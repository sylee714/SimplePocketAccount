<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mingkie.simplepocketaccount">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivities.SummaryActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivities.ExpenseIncomeActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".SummaryActivities.DailySummaryActivity"
            android:label="@string/app_name">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EmptyActivity.EmptyActivity" />
        </activity>
        <activity
            android:name=".SummaryActivities.WeeklySummaryActivity"
            android:label="@string/app_name">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EmptyActivity.EmptyActivity" />
        </activity>
        <activity
            android:name=".SummaryActivities.MonthlySummaryActivity"
            android:label="@string/app_name">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EmptyActivity.EmptyActivity" />
        </activity>
        <activity
            android:name=".SummaryActivities.YearlySummaryActivity"
            android:label="@string/app_name">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EmptyActivity.EmptyActivity" />
        </activity>
        <activity
            android:name=".SummaryActivities.DetailedSummaryActivity"
            android:label="@string/app_name">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EmptyActivity.EmptyActivity"  />
        </activity>
        <activity
            android:name=".Chart.ChartActivity"
            android:label="@string/app_name">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EmptyActivity.EmptyActivity"  />
        </activity>
        <activity
            android:name=".EmptyActivity.EmptyActivity"
            android:label="@string/app_name">
        </activity>
    </application>
</manifest>